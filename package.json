{
  "name": "@apisuite/apisuite-marketplace-extension-ui",
  "version": "1.10.0",
  "main": "build/index.js",
  "files": [
    "build"
  ],
  "description": "The Marketplace Extension UI",
  "watch": {
    "build": {
      "patterns": [
        "lib"
      ],
      "extensions": "ts,tsx,scss,json",
      "ignore": "lib/constants/info.ts",
      "quiet": false
    }
  },
  "scripts": {
    "format": "prettier --write \"lib/{,**/}*.ts{,x}\"",
    "lint": "tsc --noEmit && eslint \"lib/{,**/}*.ts{,x}\"",
    "build": "node ./scripts/write-info && rimraf ./build && tsc",
    "build:watch": "npm-watch build",
    "version": "npm run build && git add -A build lib/constants/info.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "{lib,test}/{,**/}*.ts{,x}": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/APISuite/apisuite-marketplace-extension-ui.git"
  },
  "keywords": [
    "React",
    "Component",
    "Library",
    "Typescript",
    "Sass"
  ],
  "author": "Tiago Alves",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/APISuite/apisuite-marketplace-extension-ui/issues"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "homepage": "https://github.com/APISuite/apisuite-marketplace-extension-ui#readme",
  "peerDependencies": {
    "react": ">=17.0.2",
    "react-dom": ">=17.0.2",
    "redux": ">=4.0.4",
    "react-hook-form": "7.11.0",
    "react-redux": ">=7.1.3",
    "react-router": ">=5.1.2",
    "react-router-dom": ">=5.1.2",
    "redux-saga": ">=1.1.3",
    "formik": ">=2.2.0",
    "yup": ">=0.29.3",
    "@apisuite/fe-base": "1.0.0-next.10",
    "@material-ui/icons": ">=4.5.1",
    "@material-ui/lab": ">=4.0.0-alpha.56"
  },
  "devDependencies": {
    "@apisuite/extension-ui-types": "1.0.5",
    "@apisuite/fe-base": "1.0.0-next.10",
    "@babel/core": "7.11.4",
    "@material-ui/icons": "4.5.1",
    "@material-ui/lab": "4.0.0-alpha.56",
    "@semantic-release/git": "^9.0.0",
    "@testing-library/jest-dom": "5.11.4",
    "@testing-library/react": "10.4.9",
    "@types/jest": "26.0.10",
    "@types/node": "14.14.35",
    "@types/react": "16.9.47",
    "@types/react-dom": "16.9.8",
    "@types/react-image-gallery": "1.0.2",
    "@types/react-router-dom": "5.1.7",
    "@typescript-eslint/eslint-plugin": "4.22.0",
    "@typescript-eslint/parser": "4.22.0",
    "babel-loader": "8.1.0",
    "babel-preset-react-app": "9.1.2",
    "eslint": "7.7.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.22.0",
    "eslint-plugin-jest": "23.20.0",
    "eslint-plugin-jsx-a11y": "6.3.1",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.6",
    "eslint-plugin-react-hooks": "4.1.0",
    "formik": "2.2.0",
    "identity-obj-proxy": "3.0.0",
    "jest": "26.4.2",
    "lint-staged": "10.2.12",
    "node-sass": "6.0.1",
    "npm-watch": "0.9.0",
    "prettier": "2.1.0",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-hook-form": "7.11.0",
    "react-redux": "7.1.3",
    "react-router": "5.1.2",
    "react-router-dom": "5.1.2",
    "redux": "4.0.4",
    "redux-saga": "1.1.3",
    "rimraf": "3.0.2",
    "sass-loader": "10.0.1",
    "semantic-release": "^17.4.4",
    "ts-jest": "26.2.0",
    "typescript": "4.2.4",
    "yup": "0.29.3"
  },
  "dependencies": {
    "@emotion/core": "10.0.0",
    "axios": "0.21.1",
    "immutability-helper": "3.1.1",
    "react-dropzone": "11.2.4",
    "react-image-gallery": "1.0.9",
    "react-portal-overlay": "1.0.1",
    "reselect": "^4.0.0",
    "rich-markdown-editor": "11.14.0",
    "styled-components": "5.3.0"
  },
  "release": {
    "branches": [
      {
        "name": "master"
      }
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/npm",
        {
          "npmPublish": false
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [ci skip]"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
